<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Oracle Database connection -->
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521/XEPDB1</property>
        <property name="hibernate.connection.username">restaurant</property>
        <property name="hibernate.connection.password">restaurant123</property>

        <!-- Dialect for Oracle -->
        <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>

        <!-- Hibernate settings -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Mappings will be added here later -->
        <mapping class="com.restaurant.model.Customer"/>
        <mapping class="com.restaurant.model.RestaurantTable"/>
        <mapping class="com.restaurant.model.Slot"/>
        <mapping class="com.restaurant.model.Reservation"/>
    </session-factory>
</hibernate-configuration>
